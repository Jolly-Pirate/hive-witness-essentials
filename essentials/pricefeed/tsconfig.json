{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "outDir": "dist",
    "module": "commonjs",
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "es7",
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules/*"
  ]
}