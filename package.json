{
  "name": "@witness-essentials/root",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "add:root": "yarn add -W -D"
  },
  "workspaces": {
    "packages": [
      "essentials/*"
    ],
    "nohoist": [
      "*/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": ""
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "yarn run prettier --",
      "git add"
    ],
    "*.ts": [
      "yarn run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "^12.12.31",
    "ts-node": "^8.8.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
